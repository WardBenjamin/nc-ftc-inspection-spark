#parse("/velocity/layout.vm")
#@mainLayout()
<head>
<style>
@media print
{
  table { page-break-after:auto }
  tr    { page-break-inside:avoid; page-break-after:auto }
  td    { page-break-inside:avoid; page-break-after:auto }
  thead { display:table-header-group }
  tfoot { display:table-footer-group }
}
</style>

<TITLE>Match Results</TITLE>
</head>
<a href=".."><< To Event Home</a>
<CENTER><H2>$event<BR>
Match Results</H2></CENTER>
<HR>
<DIV ALIGN=CENTER><TABLE BORDER=2 CELLPADDING=5 CELLSPACING=1 WIDTH=75%>
<TR ALIGN=CENTER><TH BGCOLOR="#CCCCCC">Match</TH><TH BGCOLOR="#CCCCCC">Result</TH><TH BGCOLOR="#CCCCCC">Red</TH><TH BGCOLOR="#CCCCCC">Blue</TH><th bgcolor=#CCCCCC colspan="2">Score breakdown</th></TR>
#set ($redColor = "#FF4444")
#set ($blueColor = "#44AAFF")
#foreach($m in $matches)
	#if($m.number % 2 == 1)
		#set ($c = "#FFFFFF")	
	#else
		#set ($c = "#CCCCCC")
	#end
	#if($m.status == 1)
	<TR ALIGN=CENTER>
		<TD BGCOLOR=$c ROWSPAN=2>
			<a href="../match/$m.number/scoresheet">
		Q-$m.number
		</a>
		</TD>
		<TD BGCOLOR="$m.winColor" ROWSPAN=2>
			#if($m.status == 1)
				${m.getRedTotal()}-${m.getBlueTotal()} $m.winChar
			#end
		</TD>
		<TD BGCOLOR=$c> <a href="../match/$m.number/scoresheet/red/" style="color:black">$m.red.team1#if($m.red.is1Surrogate())*#end</a></TD>
		<TD BGCOLOR=$c> <a href="../match/$m.number/scoresheet/blue/" style="color:black">$m.blue.team1#if($m.blue.is1Surrogate())*#end</a></TD>
		<td bgcolor=$c colspan="2"><a href="../match/$m.number/scoresheet">Scoresheet</a></td>
	</TR>
	<TR ALIGN=CENTER>
		<TD BGCOLOR=$c><a href="../match/$m.number/scoresheet/red/" style="color:black">$m.red.team2#if($m.red.is2Surrogate())*#end</a></TD>
		<TD BGCOLOR=$c><a href="../match/$m.number/scoresheet/blue/" style="color:black">$m.blue.team2#if($m.blue.is2Surrogate())*#end</a></TD>
		<td bgcolor=$c><a href="../match/$m.number/scoresheet/red/">Red</a></td>
		<td bgcolor=$c><a href="../match/$m.number/scoresheet/blue/">Blue</a></td>
	</TR>
	#else
	<TR ALIGN=CENTER>
		<TD BGCOLOR=$c ROWSPAN=2>Q-$m.number</TD>
		<TD BGCOLOR="$m.winColor" ROWSPAN=2>
			#if($m.status == 1)
				${m.getRedTotal()}-${m.getBlueTotal()} $m.winChar
			#end
		</TD>
		<TD BGCOLOR=$c> $m.red.team1#if($m.red.is1Surrogate())*#end</TD>
		<TD BGCOLOR=$c> $m.blue.team1#if($m.blue.is1Surrogate())*#end</TD>
	</TR>
	<TR ALIGN=CENTER>
		<TD BGCOLOR=$c>$m.red.team2#if($m.red.is2Surrogate())*#end</TD>
		<TD BGCOLOR=$c>$m.blue.team2#if($m.blue.is2Surrogate())*#end</TD>
	</TR>
	#end
#end
</TABLE></DIV>

<HR>
<P align=left><STRONG>Note:</STRONG> * Indicates a surrogate match.  Those matches do NOT count in the rankings</P>
