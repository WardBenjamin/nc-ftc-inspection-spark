#macro(labelID)
<script>
function onDown$bodyContent() {
	var cur = document.getElementById('$bodyContent').textContent;
	if (cur == '') {
		cur = 0;
	} else {
		cur = parseInt(cur) - 1;
	}
	if (cur < 0) {
		cur = 0;
	}
	document.getElementById('$bodyContent').textContent = cur;
}
function onUp$bodyContent() {
	var cur = document.getElementById('$bodyContent').textContent;
	if (cur == '') {
		cur = 0;
	} else {
		cur = parseInt(cur) + 1;
	}
	document.getElementById('$bodyContent').textContent = cur;
}
</script>
<input type="button" class="counterButton nowrap" onClick="onDown$bodyContent()" value="-1" style="width:40%"/><textarea id="$bodyContent" style="width:20%;border:none;overflow:visible;resize:none;text-align:center;vertical-align:top;font-size:200%;" cols=3 readonly>0</textarea><input class="counterButton nowrap" type="button" onClick="onUp$bodyContent()" value="+1" style="width:40%"/>
#end