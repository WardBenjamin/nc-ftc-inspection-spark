#parse("/velocity/layout.vm")
#@mainLayout()
<table border=1 cellpadding=0 cellspacing=0 style="border-collapse:collapse;">
	#foreach($f in $form)
		#set ($x = $max / $f.columnData.size())		
		#if($f.type == 1)	
			<tr bgcolor=$headerColor>	
					#foreach($c in $f.items)						
							<th colspan=$x id=$c.id>$c.label</th>				
					#end
				<th>$f.description</th>
				<th>$f.rule</th>
			</tr>
		#else
			<tr height=30px>
					#foreach($c in $f.items)						
						<td colspan=$x id=$c.id>
							#if($c.required == 0)
								N/A
							#elseif($c.required == 1)
								REQ
							#else
								OPT
							#end
						</td>
					#end
				<td>$f.description</td>
				<td>$f.rule</td>
			</tr>
		#end
	#end
</table>
#end