#macro(mainLayout)
<html>
<head>
    <title>FTC Inspection App</title>
    <link rel="stylesheet" href="/main.css">
    <link rel="icon" href="/favicon.png">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta charset="utf-8">
  	<link rel="stylesheet" href="/js/jquery-ui.css">
	<script src="/js/jquery-1.12.4.js"></script>
  	<script src="/js/jquery-ui.js"></script>
  	<script src="/js/general.js"></script>
  	<script>
  		Role = {
  			SYSADMIN : 1<<31,
			ADMIN : 1<<30,
			KEY_VOLUNTEER : 1<<29,
			HEAD_REF : 1<<28,
			REF : 1<<27,
			LI : 1<<26,
			INSPECTOR : 1<<25,
			VOLUNTEER : 1<<2,
			TEAM : 1<<1,
			GENERAL : 1<<0,
			NONE : 0
  		};
		function hasRole(role) {
			return ($roles & role) != 0 || $roles === role;
		};
  	</script>
</head>
<body>
<header>
    <nav>
    	#if(!$mobile)
    		<a href="$WebPath.getIndex()"><img id="logo" src="/img/logo.png" alt="FTC Inspection"></a>
    	#end
    	<a href="$WebPath.getInspection()">Inspection</a>
    	<a href="$WebPath.getConsole()">Console</a>
    	<ul id="menu" #if($mobile) style="margin-top:0px;" #end>
            #if($currentUser)
                <li>
                    <a href="$WebPath.getUserPage()">
                        Hello $currentUser.</a>
                </li>
            #else
                <li><a href="$WebPath.getLogin()">Login</a></li>
            #end
        </ul>
    </nav>
</header>
<main>
    <div id="content">
        $bodyContent
    </div>
</main>
<footer>
    This is a footer.
</footer>
</body>
</html>
#end
